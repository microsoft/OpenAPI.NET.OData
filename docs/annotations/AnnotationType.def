<Schema Namespace="Org.OData.Core.V1" Alias="Core" xmlns="http://docs.oasis-open.org/odata/ns/edm">
  <Term Name="HttpRequests" Type="Collection(Core.HttpRequest)" AppliesTo="EntitySet Singleton ActionImport FunctionImport Action Function">
    <Annotation Term="Core.Description" String="Describes possible HTTP requests" />
    <Annotation Term="Core.LongDescription" String="The list need not be complete. It may be used to generate API documentation, so restricting it to the most common and most important responses may increase readability." />
  </Term>
  <ComplexType Name="HttpRequest">
    <Property Name="Description" Type="Edm.String" />
    <Property Name="Method" Type="Edm.String" />
    <Property Name="CustomQueryOptions" Type="Collection(Core.CustomParameter)" />
    <Property Name="CustomHeaders" Type="Collection(Core.CustomParameter)" />  <!-- Map to Parameter in Operation as Header object.-->
    <Property Name="RequestBody" Type="Core.HttpRequestBody" /> <!-- Map to RequestBody object in Operation. -->
    <Property Name="HttpResponse" Type="Collection(Core.HttpResponse)" />  <!--  Map to Response object in Operation.     -->
  </ComplexType>
  <ComplexType Name="HttpResponse">
    <Property Name="ResponseCode" Type="Edm.String" />
    <Property Name="ResponseContent" Type="Collection(Core.MediaType)" />
    <Property Name="Description" Type="Edm.String" />
    <!-- <Property Name="Required" Type="Edm.Boolean" /> not needed -->
  </ComplexType>
  <ComplexType Name="HttpStatusCodeCondition">
    <Property Name="Description" Type="Edm.String" /> <!--This is the description for the response code. -->
    <Property Name="Content" Type="Collection(Core.MediaType)"/>
  </ComplexType>
  <ComplexType Name="HttpRequestBody">
    <Property Name="Description" Type="Edm.String" />
    <Property Name="Parameters" Type="Collection(Core.CustomParameter)" />
    <!-- <Property Name="Required" Type="Edm.Boolean" Nullable="false" />  not required since this will be inferred by the verb.-->
  </ComplexType>
  <ComplexType Name="MediaType">
    <Property Name="Name" Type="Edm.String"/>
    <Property Name="Type" Type="Edm.String"/>
    <Property Name="MediaBody" Type="Edm.String" />
    <Property Name="ExampleValues" Type="Collection(Core.CustomParameterExampleValue)" Nullable="false" />
  </ComplexType>
  <ComplexType Name="CustomParameter">
    <Property Name="Name" Type="Edm.String" Nullable="false" />
    <Property Name="Type" Type="Edm.String" Nullable="false" />
    <Property Name="Description" Type="Edm.String" />
    <Property Name="DocumentationURL" Type="Edm.String" />
    <Property Name="Required" Type="Edm.Boolean" Nullable="false" />
    <Property Name="ExampleValues" Type="Collection(Core.CustomParameterExampleValue)" Nullable="false" />
  </ComplexType>
  <ComplexType Name="CustomParameterExampleValue">
    <Property Name="Value" Type="Edm.String" Nullable="false" />
    <Property Name="Description" Type="Edm.String" Nullable="false" />
  </ComplexType>
</Schema>
